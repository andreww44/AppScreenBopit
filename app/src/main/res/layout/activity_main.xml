<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/Jugar"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:backgroundTint="#000000"
        android:text="Jugar"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415"
        tools:text="Jugar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="342dp"
        android:layout_height="259dp"
        app:layout_constraintBottom_toTopOf="@+id/Jugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Button
        android:id="@+id/About"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:text="About"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Jugar" />

    <Button
        android:id="@+id/Historial"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:text="Historial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About" />

    <Button
        android:id="@+id/Instrucciones"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:text="Instrucciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Historial" />

    <Button
        android:id="@+id/Preferencias"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:text="Preferencias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Instrucciones" />

    <Button
        android:id="@+id/Salir"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:text="Salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Preferencias" />

</androidx.constraintlayout.widget.ConstraintLayout>